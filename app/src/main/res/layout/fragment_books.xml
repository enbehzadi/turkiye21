<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_inactive"
        >
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8"
            tools:context=".mainActivity">

        <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="0sp" >
            <Button

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:background="@drawable/btn_blue_selector"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/padd_10"
                    android:layout_marginLeft="@dimen/padd_10"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:id="@+id/bt_alphabet"
                    android:text="@string/Alphabet"


                    android:textColor="@color/md_white_1000"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp" >
            <LinearLayout
                    android:id="@+id/la_a1"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" >
                <ImageView
                        android:id="@+id/iv_a1"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/a1"
                        />
                <TextView
                        android:text="A1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_a1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/la_a2"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" >
                <ImageView
                        android:id="@+id/iv_a2"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/a2"
                        />
                <TextView
                        android:text="A2"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_a2"
                        />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp" >
            <LinearLayout
                    android:id="@+id/la_b1"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" >
                <ImageView
                        android:id="@+id/iv_b1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/b1"/>
                <TextView
                        android:text="B1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_b1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/la_b2"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/iv_b2"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/b2"/>
                <TextView
                        android:text="B2"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_b2"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp" >
            <LinearLayout
                    android:id="@+id/la_c1"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/iv_c1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/c1" android:baselineAligned="false"/>
                <TextView
                        android:text="C1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_c1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/la_c11"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" >
                <ImageView
                        android:id="@+id/iv_c11"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="0sp"
                        android:layout_weight="5"
                        android:src="@drawable/c1"/>
                <TextView
                        android:text="C1+"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_c11"
                        android:src="@drawable/a2"
                        />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0sp" >

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_horizontal_ntb"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>