<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#03A9F4"

        tools:context=".splashscreen">
    <TextView
            android:text="SELECT LANGUAGE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:id="@+id/textView" tools:layout_editor_absoluteX="0dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatSpinner
            android:entries="@array/lng_list"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"/>
    <Button
            android:gravity="center"
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="172dp" android:layout_marginStart="172dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>